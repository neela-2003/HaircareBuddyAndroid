<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="#F3F3F3"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp">

        <!-- Doctor Image -->
        <ImageView
            android:id="@+id/doctorImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Doctor"
            android:scaleType="centerCrop"
            android:src="@drawable/doctor_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Doctor Info -->
        <TextView
            android:id="@+id/tvDoctorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Name: Abi"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/btnBook"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/doctorImage"
            app:layout_constraintTop_toTopOf="@id/doctorImage" />

        <TextView
            android:id="@+id/tvDoctorId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ID: 12345"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/tvDoctorName"
            app:layout_constraintStart_toStartOf="@id/tvDoctorName"
            app:layout_constraintTop_toBottomOf="@id/tvDoctorName" />

        <TextView
            android:id="@+id/tvExperience"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Experience: 10 Years"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/tvDoctorName"
            app:layout_constraintStart_toStartOf="@id/tvDoctorName"
            app:layout_constraintTop_toBottomOf="@id/tvDoctorId" />

        <!-- Book Button -->
        <Button
            android:id="@+id/btnBook"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#F58DAE"
            android:text="BOOK"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
