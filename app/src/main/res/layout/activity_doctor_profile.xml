<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <View
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#FFAEC9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor Profile"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/headerBackground"
        app:layout_constraintBottom_toBottomOf="@id/headerBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp" />


    <ImageView
        android:id="@+id/deleteIcon"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/logoutt"
        app:layout_constraintEnd_toEndOf="@id/headerBackground"
        app:layout_constraintTop_toBottomOf="@id/headerBackground" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/doc_cir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerBackground" />

    <TextView
        android:id="@+id/nameBox"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="48dp"
        android:background="#3AE91E63"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Nila"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImage" />


    <TextView
        android:id="@+id/phoneBox"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="32dp"
        android:background="#3AE91E63"
        android:gravity="center"
        android:text="9876543210"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameBox" />

    <!-- Password Box -->
    <TextView
        android:id="@+id/emailBox"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="32dp"
        android:background="#3AE91E63"
        android:gravity="center"
        android:text="nila@gmail.com"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phoneBox" />


</androidx.constraintlayout.widget.ConstraintLayout>